<div class="navbar">


  <div class="navbar-child">
    <% if user_signed_in? %>
      <%= link_to accounts_path, class: "avatar-link" do %>
        <div class="avatar-container">
          <%if current_user.profile.attached?%>
            <%= cl_image_tag current_user.profile.key, class: "avatar" %>
          <%else%>
            <%= image_tag "default_profile.png", class: "avatar" %>
          <%end%>
          <p style="color: white;"><%= current_user.first_name %></p>
        </div>
      <% end %>

    <% else %>
      <%= link_to new_user_session_path, class: "avatar-link" do %>
        <div class="avatar-container">
          <p id="nav-login-btn" style="color: white;">Sign in</p>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="nav-btn-container">
    <%= link_to "Workouts", workouts_path %>
    <%= link_to "My Account", accounts_path %>
  </div>

</div>
